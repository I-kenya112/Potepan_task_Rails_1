<div class ="information">
  <h3>予定の新規作成</h3>
</div>

<%= render "shared/error", obj: @schedule %>
 
<%= form_with model: @schedule do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>
 
    <tr>
      <th><%= f.label :start_at ,"開始日" %></th>
      <td><%= f.date_field :start_at %></td>
    </tr>

    <tr>
      <th><%= f.label :end_at ,"終了日" %></th>
      <td><%= f.date_field :end_at %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day ,"終日" %></th>
      <td><%= f.check_box :all_day %></td>
    </tr>

    <tr>
      <th><%= f.label :memo ,"メモ" %></th>
      <td><%= f.text_area :memo %></td>
    </tr>
  </table>

  <div class ="edit-end">
    <p><%= link_to "スケジュール一覧に戻る", :schedules, class: "btn btn-cancel" %></p>
    <p><%= f.submit "編集を完了する", class: "btn btn-submit" %></p>
  </div>
<% end %>